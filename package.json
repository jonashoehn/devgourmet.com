{
  "name": "devgourmet-monorepo",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "bun run --filter '@devgourmet/*' dev",
    "dev:web": "bun run --filter '@devgourmet/web' dev",
    "dev:server": "bun run --filter '@devgourmet/server' dev",
    "build": "bun run --filter '@devgourmet/*' build",
    "build:web": "bun run --filter '@devgourmet/web' build",
    "build:server": "bun run --filter '@devgourmet/server' build",
    "db:generate": "bun run --filter '@devgourmet/server' db:generate",
    "db:migrate": "bun run --filter '@devgourmet/server' db:migrate",
    "db:studio": "bun run --filter '@devgourmet/server' db:studio",
    "lint": "bun run --filter '@devgourmet/web' lint",
    "preview": "bun run --filter '@devgourmet/web' preview"
  },
  "dependencies": {
    "better-auth": "^1.3.27"
  },
  "packageManager": "bun@1.2.22"
}
